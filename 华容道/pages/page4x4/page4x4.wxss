/* pages/page4x4/page4x4.wxss */
.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  background-color: #f5f5f5;
  background-image: url("https://img520.com/gSbOf0.jpg");
  background-size: cover;
  background-position: center; 
  background-repeat: no-repeat;
}

.grid {
  display: grid;
  grid-template-columns: repeat(4, 85px);
  grid-gap: 0px;
  border-style: groove;
  border-color: rgb(86, 184, 167);
  border-radius: 10px;
}

.tile {
  width: 85px;
  height:85px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(196, 216, 174, 0.959);
  font-size: 24px;
  color: #333;
  border-radius: 12px;
  border-style: groove;
  border-color: rgb(86, 184, 167);
}

.tile.empty {
  background-color: transparent;
  border: none;
}

.footer {
  margin-top: 20px;
  width: 50%;
  text-align: center;
  font-size: 24px;
}

button {
  margin: 5px;
  width: 100%;
  border: none;
  background-color: #005fc5;
  color: white;
  border-radius: 10px;
}