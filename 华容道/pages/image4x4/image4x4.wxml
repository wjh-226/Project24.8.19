<!--pages/image4x4/image4x4.wxml-->
<view class="container">
  <view class="title">4x4 拼图</view>
  <view class="grid">
    <block wx:for="{{num}}" wx:key="index">
      <view 
        class="grid-item {{item === 16 ? 'empty' : ''}}" 
        data-index="{{index}}" 
        data-item="{{item}}" 
        bindtap="onMoveTap">
        <image 
          wx:if="{{item !== 16}}"
          src="{{images[item - 1]}}"
        />
      </view>
    </block>
  </view>
  <view class="footer">
    <text>{{success}}
    </text>
    <text>时间: {{time}}秒</text>
    <button bindtap="timeBegin">开始</button>
    <button bindtap="timeStop">停止</button>
  </view>
</view>